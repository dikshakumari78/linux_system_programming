#include <iostream>
#include <sys/sysinfo.h>

void printUptime(long uptime_seconds) {
    int days = uptime_seconds / (24 * 3600);
    uptime_seconds %= (24 * 3600);
    int hours = uptime_seconds / 3600;
    uptime_seconds %= 3600;
    int minutes = uptime_seconds / 60;
    int seconds = uptime_seconds % 60;

    std::cout << "System Uptime: ";
    if (days > 0) std::cout << days << " day(s) ";
    if (hours > 0 || days > 0) std::cout << hours << " hour(s) ";
    if (minutes > 0 || hours > 0 || days > 0) std::cout << minutes << " minute(s) ";
    std::cout << seconds << " second(s)" << std::endl;
}

int main() {
    struct sysinfo info;

    if (sysinfo(&info) != 0) {
        perror("sysinfo");
        return 1;
    }

    printUptime(info.uptime);

    return 0;
}
