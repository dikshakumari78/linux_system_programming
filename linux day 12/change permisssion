#!/bin/bash

# Check if the correct number of arguments is provided
if [ "$#" -ne 3 ]; then
    echo "Usage: $0 <directory_path> <search_string> <replacement_string>"
    exit 1
fi

# Get the directory path and strings from the arguments
DIRECTORY=$1
SEARCH_STRING=$2
REPLACEMENT_STRING=$3

# Check if the provided argument is a directory
if [ ! -d "$DIRECTORY" ]; then
    echo "Error: $DIRECTORY is not a directory"
    exit 1
fi

# Find and replace the string in all files within the directory
find "$DIRECTORY" -type f -exec sed -i "s/${SEARCH_STRING}/${REPLACEMENT_STRING}/g" {} +

# Print completion message
echo "Find and replace operation completed in $DIRECTORY"
