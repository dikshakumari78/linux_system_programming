#include <iostream>
#include <cstdlib>
#include <csignal>
#include <unistd.h>
#include <cstring>
#include <arpa/inet.h>
#include <openssl/ssl.h>
#include <openssl/err.h>

const char* SERVER_ADDRESS = "127.0.0.1";
const int PORT = 8080;

// Global variable to indicate if SIGINT or SIGTERM was received
bool sigint_or_sigterm_received = false;

// Signal handler function
void signal_handler(int signum) {
    if (signum == SIGINT || signum == SIGTERM) {
        sigint_or_sigterm_received = true;
    }
}

SSL_CTX* create_client_context() {
    const SSL_METHOD* method;
    SSL_CTX* ctx;

    // Initialize OpenSSL
    SSL_library_init();
    OpenSSL_add_all_algorithms();
    SSL_load_error_strings();

    // Create SSL context
    method = SSLv23_client_method();
    ctx = SSL_CTX_new(method);
    if (!ctx) {
        perror("Unable to create SSL context");
        ERR_print_errors_fp(stderr);
        exit(EXIT_FAILURE);
    }

    return ctx;
}

void run_client(SSL_CTX* ctx) {
    int client_fd;
    struct sockaddr_in serv_addr;

    // Create TCP socket
    if ((client_fd = socket(AF_INET, SOCK_STREAM, 0)) < 0) {
        perror("socket creation failed");
        exit(EXIT_FAILURE);
    }

    // Initialize server address and port
    memset(&serv_addr, '0', sizeof(serv_addr));
    serv_addr.sin_family = AF_INET;
    serv_addr.sin_port = htons(PORT);

    // Convert IPv4 and IPv6 addresses from text to binary form
    if (inet_pton(AF_INET, SERVER_ADDRESS, &serv_addr.sin_addr) <= 0) {
        perror("Invalid address/ Address not supported");
        exit(EXIT_FAILURE);
    }

    // Connect to the server
    if (connect(client_fd, (struct sockaddr *)&serv_addr, sizeof(serv_addr)) < 0) {
        perror("Connection Failed");
        exit(EXIT_FAILURE);
    }

    // Create SSL connection
    SSL* ssl = SSL_new(ctx);
    SSL_set_fd(ssl, client_fd);

    // Perform SSL handshake
    if (SSL_connect(ssl) <= 0) {
        ERR_print_errors_fp(stderr);
        exit(EXIT_FAILURE);
    }

    // Send message to server
    const char* message = "Hello from client";
    SSL_write(ssl, message, strlen(message));

    // Receive response from server
    char buffer[1024];
    int valread = SSL_read(ssl, buffer, sizeof(buffer)-1);
    buffer[valread] = '\0';
    printf("Server: %s\n", buffer);

    // Close SSL connection
    SSL_shutdown(ssl);
    SSL_free(ssl);

    // Close socket
    close(client_fd);
    std::cout << "Client closed." << std::endl;
}

int main() {
    // Register signal handlers
    signal(SIGINT, signal_handler);
    signal(SIGTERM, signal_handler);

    // Create SSL context for client
    SSL_CTX* ctx = create_client_context();

    // Run the client
    run_client(ctx);

    // Cleanup SSL context
    SSL_CTX_free(ctx);

    return 0;
}

